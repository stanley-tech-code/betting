{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/traffic/(.*)",
      "dest": "/api/traffic/$1.js"
    },
    {
      "src": "/api/stats/(.*)",
      "dest": "/api/stats/$1.js"
    },
    {
      "src": "/api/variant/(.*)",
      "dest": "/api/variant/$1.js"
    },
    {
      "src": "/api/ai/(.*)",
      "dest": "/api/ai/$1.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    }
  ]
}